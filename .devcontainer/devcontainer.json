{
    "name": "SCD",
  
    "dockerComposeFile": [
      "../docker-compose.yaml"
    ],
    "service": "devcontainer",

    "workspaceFolder": "/workspace",
    "postCreateCommand": "uv sync",
  
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-toolsai.jupyter"
        ],
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        }
      }
    },
    "remoteUser": "root"
}
